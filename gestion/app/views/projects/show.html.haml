- model_class = @project.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @project.name
%p
  %strong= model_class.human_attribute_name(:client_id) + ':'
  %br
  = @project.client_id
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @project.description
%p
  %strong= model_class.human_attribute_name(:budget) + ':'
  %br
  = @project.budget
%p
  %strong= model_class.human_attribute_name(:discount) + ':'
  %br
  = @project.discount
%p
  %strong= model_class.human_attribute_name(:order_number) + ':'
  %br
  = @project.order_number
%p
  %strong= model_class.human_attribute_name(:manager) + ':'
  %br
  = @project.manager

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), projects_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_path(@project), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), project_path(@project), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
